# Backend Production Environment
PORT=3001
NODE_ENV=production

# MCP Configuration
MCP_SERVER_URL=
MCP_API_KEY=
MCP_MODEL_NAME=gpt-4
MCP_MAX_TOKENS=1000
MCP_TEMPERATURE=0.7

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/production.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Security
TRUST_PROXY=true
HELMET_ENABLED=true

# Monitoring
MONITORING_TOKEN=your-secure-monitoring-token-here